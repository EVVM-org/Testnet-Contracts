{
  "name": "@evvm/testnet-contracts",
  "version": "2.1.2",
  "description": "EVVM Testnet Contracts - Smart contracts and tools for scalable, modular, and cross-chain EVM virtualization",
  "files": [
    "contracts/**/*.sol",
    "interfaces/**/*.sol",
    "library/**/*.sol",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "evvm",
    "ethereum",
    "virtual-machine",
    "solidity",
    "smart-contracts",
    "cross-chain",
    "testnet",
    "evm",
    "blockchain",
    "defi"
  ],
  "author": "EVVM Organization",
  "license": "EVVM-NONCOMMERCIAL-1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EVVM-org/Testnet-Contracts.git"
  },
  "homepage": "https://github.com/EVVM-org/Testnet-Contracts#readme",
  "bugs": {
    "url": "https://github.com/EVVM-org/Testnet-Contracts/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run copy-files",
    "copy-files": "cp -r src/contracts . && cp -r src/interfaces . && cp -r src/library .",
    "clean": "rm -rf contracts interfaces library",
    "prepare-publish": "npm run copy-files && npm pack",
    "publish-package": "npm run copy-files && npm publish && npm run clean",
    "compile": "forge build",
    "test": "forge test",
    "deploy:anvil": "make deployLocalTestnet",
    "deploy:sepolia": "make deployTestnet NETWORK=eth",
    "deploy:arbitrum": "make deployTestnet NETWORK=arb"
  },
  "peerDependencies": {
    "@openzeppelin/contracts": "^5.0.0"
  },
  "dependencies": {
    "@hyperlane-xyz/core": "^3.6.1"
  },
  "devDependencies": {
    "forge-std": "^1.0.0"
  }
}
